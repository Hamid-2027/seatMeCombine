{
  "name": "seatmebackend",
  "version": "1.0.0",
  "description": "Backend for SeatMe application using Firebase",
  "main": "functions/index.js",
  "scripts": {
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
