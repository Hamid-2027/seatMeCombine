  },
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.21.2",
    "firebase-admin": "^11.11.1",
    "firebase-functions": "^4.4.0",
    "nodemon": "^3.1.10"
  },
  "devDependencies": {
    "@types/firebase": "^3.2.3",
    "@types/node": "^20.17.57",
    "firebase": "^11.8.1",
    "firebase-functions-test": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "private": true
}
